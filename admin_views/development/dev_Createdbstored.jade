include ../components/InputElements.jade

style(type='text/css').
        .selectpicker {
                font-size: 15px !important;
        }
.container#createbody
                    form(id="dataform", name="dataform").form
                        - var cur_pos = 0;
                        each input, i in fields
                                - var step_count = i / 3
                                - var start_point = step_count * 3
                                - var stop_point = (step_count + 1) * 3
                                - var row = input
                                if (i == start_point)
                                                - var row1 = fields[i]
                                                - var row2 = fields[i+1]
                                                - var row3 = fields[i+2]
                                                .row
                                                        .col-md-4.form-group.floating-label-form-group
                                                                +Input(row1)
                                                        .col-md-4.form-group.floating-label-form-group
                                                                +Input(row2)
                                                        .col-md-4.form-group.floating-label-form-group
                                                                +Input(row3)                                                                                                                                
                                                - var start_point = 10000
                        +inputHidden('catalog',catalog)                                                   
                        .row
                                .col-md-4                        
                                        button.btn.btn-success.btn-lg.btn-block(type='button', onClick='createObject("#{submit_to_module}","#{submit_to_action}","#{cur_obj}","Create","#{doafter}");')
                                                i.fa.fa-check-circle
                                                |   Create
        
